<div class="modal fade bs-modal-program" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fa fa-plus"></i> Dodaj Program</h2>
            </div>
            <div class="modal-body">
                <form action="/dodaj-program" method="post">
                    <div class="form-group">
                        <label>Naziv</label>
                        <input type="text" class="form-control" name="program_naziv" required>
                    </div>
                    <div class="form-group">
                        <label>Minimalan broj sudionika</label>
                        <input type="number" class="form-control" name="program_min" required>
                    </div>
                    <div class="form-group">
                        <label>Maksimalan broj sudionika</label>
                        <input type="number" class="form-control" name="program_max" required>
                    </div>
                    <div class="form-group">
                        <label>Termin</label>
                        <input type="datetime-local" class="form-control" name="program_termin" required>
                    </div>
                    <div class="form-group">
                        <label>Prostorija</label>
                        <input type="text" class="form-control" name="program_prostorija" required>
                    </div>
                    <div class="form-group">
                        <label>Adresa</label>
                        <input type="text" class="form-control" name="program_add" required>
                    </div>
                    <div class="form-group">
                        <label>Grad</label>
                        <select id="gradSelect" class="form-control" name="program_mjesto">
                            <option selected="selected">Odaberi grad</option>
                            <% grad.forEach(function(mjesto){ %>
                                <option value="<%= mjesto.mjesto_id %>"><%= mjesto.naziv %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Predavač</label>
                        <select id="predavacSelect" class="form-control" name="program_predavac">
                            <option selected="selected">Odaberi predavača</option>
                            <% predavac.forEach(function(osoba) { %>
                                <option value="<%= osoba.nastavnik_id %>"><%= osoba.ime +' '+osoba.prezime %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button class="btn btn-default"><i class="fa fa-floppy-o"></i> Spremi</button>
                </form>
            </div>
        </div>
    </div>
</div>